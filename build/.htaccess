RewriteEngine On

# Redirect root URL to /build/index.php
RewriteRule ^$ /build/index.php [L]

# Hide the /build folder and allow access to files inside it without showing path
RewriteCond %{REQUEST_URI} !^/build/
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)$ /build/$1 [L]

# If the specific file doesn't exist, route everything to /build/index.php
RewriteCond %{REQUEST_URI} !^/build/index\.php$
RewriteRule ^(.*)$ /build/index.php [L]

