RewriteEngine On

# Redirect the root domain to /build/index.php
RewriteRule ^$ /build/index.php [L]

# Only rewrite .php and .html files
RewriteCond %{REQUEST_URI} !^/build/
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)\.(php|html)$ /build/$1.$2 [L]

# Redirect any non-matching request to /build/index.php (for pages without extensions)
RewriteCond %{REQUEST_URI} !^/build/index\.php$
RewriteRule ^(.*)$ /build/index.php [L]

